<div class="card-form {{page}}">
  <div class="card-form__title">
    {{ pageTitle }}
  </div>

  <form class="card-form__content">
    <div class="card-form__content_wrapper">
      {{#each fields}}
        <div class="card-form__content__input">
          <input
            placeholder="{{ this.title }}"
            type="{{ this.type }}"
            name="{{ this.name }}"
            class="input"
          >
        </div>
      {{/each}}
    </div>

    <div class="card-form__buttons">
      {{> button label=buttonLabel }}
      {{> buttonLink label=buttonLinkLabel href=href }}
    </div>
  </form>

</div>

<link rel="stylesheet" href="/partials/authCard.scss">